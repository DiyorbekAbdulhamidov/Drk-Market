{
  "compilerOptions": {
    // O'zgaruvchilarni yaratish
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "moduleResolution": "node",
    
    // Qolgan sozlovlar
    "target": "es2016",
    "watch": true,
    "outDir": "/public/js",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
